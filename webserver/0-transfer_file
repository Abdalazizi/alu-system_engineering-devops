# debugging with puppet
exec { 'pp':
  path    => '/usr/bin:/usr/sbin:/bin',
  command => 'sed -i "/ULIMIT=/c\ULIMIT=\'-n 4096\'" /etc/default/nginx; service nginx restart',
}#!/usr/bin/env bash
# Check if the fourth argument is empty
if [[ -z "$4" ]]; then
    echo "Usage: 0-transfer_file PATH_TO_FILE IP USERNAME PATH_TO_SSH_KEY"
    exit 1
fi

# Construct the server host address
host="$3@$2:~/"

# Transfer the file using scp
scp -o StrictHostKeyChecking=no -i "$4" "$1" "$host"