#!/usr/bin/env bash
# Configures Nginx to run as nginx user and listen on port 8080 on all interfaces

# Create nginx user if it doesn't exist
if ! id "nginx" &>/dev/null; then
    useradd -r -s /usr/sbin/nologin nginx
fi

# Install nginx if not already installed
apt update -y && apt install -y nginx

# Modify nginx.conf to run as nginx user
sed -i 's/^user .*/user nginx;/' /etc/nginx/nginx.conf

# Modify default server block to listen on port 8080
sed -i 's/listen 80 default_server;/listen 8080 default_server;/' /etc/nginx/sites-available/default
sed -i 's/listen \[::\]:80 default_server;/listen [::]:8080 default_server;/' /etc/nginx/sites-available/default

# Ensure nginx can read/write to required folders
chown -R nginx:nginx /var/log/nginx /var/cache/nginx

# Restart nginx cleanly
service nginx restart
