#!/usr/bin/env bash
# Installs and configures Nginx to listen on port 80 (IPv4 and IPv6)

# Update and install Nginx silently
apt-get update -y >/dev/null 2>&1
apt-get install -y nginx >/dev/null 2>&1

# Configure Nginx to listen on port 80 (IPv4 and IPv6)
sed -i 's/listen [0-9]* default_server;/listen 80 default_server;/' /etc/nginx/sites-available/default >/dev/null 2>&1
sed -i 's/listen \[::\]:[0-9]* default_server;/listen [::]:80 default_server;/' /etc/nginx/sites-available/default >/dev/null 2>&1

# Restart nginx silently
service nginx restart >/dev/null 2>&1
